{
    "compilerOptions": {
        "strictNullChecks": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "target": "es6",
        "lib": ["dom", "es2017"],
        "skipLibCheck": true
    },
    "include": [
        "public/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}